@page
@using CRM.Models;
@model CRM.Pages.AllRequestsModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/base.css">
    <link rel="stylesheet" type="text/css" href="/css/allRqs_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="/js/base.js"></script>
    <script type="text/javascript" src="/js/allRqs.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body>
    <div class="panel">
        <div style="width:25%;">
            <input type="text" class="search" placeholder="поиск">
            <ul id="ListSubj">
                @foreach(Ticket ticket in Model.tickets)
                {
                    <li>
                        <button>
                            @ticket.TicketTitle
                            @foreach(State state in Model.states)
                            {
                                if(@state.StateId == @ticket.State)
                                {
                                    <table width="100%" class="stage_@state.StateId">
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </table>
                                    <p>@state.Name</p>
                                }
                            }
                        </button>
                        <hr />
                    </li>
                }
            </ul>
        </div>
        <div style="width:75%;">
            <div id="currentRequest" style="height:100%">
                <h4></h4>
                <div style="display:flex;flex-direction: row; height: 95.5%; margin-top: 2%;">
                    <div id="currentMail"></div>
                    <ul id="currentParameters">
                        <button class="history_button"></button>
                        <div class="history_block invisible">
                            <div class="history">
                            </div>
                            <div class="pointer"></div>
                        </div>
                        <li>
                            <p>От:</p>
                            <p></p>
                        </li>
                        <li>
                            <p>стадия</p>
                            <select id="selectStage">
                                @foreach (State state in Model.states)
                                {
                                    <option>@state.Name</option>
                                }
                            </select>
                        </li>
                        <li>
                            <p>ответственные</p>
                            <select id="selectRespons" multiple="multiple">
                                @foreach (User user in Model.users)
                                {
                                    <option value="@user.UserId">@user.Name</option>
                                }
                            </select>
                        </li>
                        <li style="height:65%">
                            <p>комментарии</p>
                            <div class="commentsHistory">
                            </div>
                            <textarea id="commentRequest"></textarea>
                        </li>
                        <div class="option_btns">
                            <button>Добавить комментарий</button>
                            <button type="submit">Сохранить</button>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>